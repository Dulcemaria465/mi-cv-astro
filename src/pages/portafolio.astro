<main class="portfolio-container">
  <aside class="sidebar">
    <img src={`https://ui-avatars.com/api/?name=${personalInfo.nombre.replace(/ /g, '+')}&background=6b7280&color=fff&size=200`} alt={personalInfo.nombre} class="profile-image" />
    <h1>{personalInfo.nombre}</h1>
    <p class="subtitle">Estudiante de Ingeniería en Sistemas Computacionales</p>
    <div class="contact-list">
      <a href={`mailto:${personalInfo.email}`} class="contact-link">@ {personalInfo.email}</a>
      <a href={`tel:${personalInfo.telefono}`} class="contact-link">📞 {personalInfo.telefono}</a>
      <a href={personalInfo.facebook} class="contact-link" target="_blank">FB Dulce Maria</a>
      <a href={personalInfo.github} class="contact-link" target="_blank">GH Dulcemaria465</a>
    </div>
    <a href={personalInfo.cv} download class="download-btn">📥 Descargar CV en PDF</a>
  </aside>

  <section class="main-content">
    <section>
      <h2>Sobre mí</h2>
      <p>
        Soy estudiante de Ingeniería en Sistemas Computacionales en la Universidad Autónoma de Tamaulipas. Me apasiona el desarrollo de software, el diseño de interfaces y la tecnología. Busco seguir aprendiendo y aportar mis conocimientos en proyectos innovadores.
      </p>
    </section>

    <section>
      <h2>Recorrido estudiantil</h2>
      {estudios.map(est => (
        <div class="education-item">
          <div class="education-title">{est.carrera}</div>
          <div class="education-details">{est.institucion} | {est.periodo}</div>
        </div>
      ))}
    </section>

    <section>
      <h2>Certificados</h2>
      <div class="certificados-list">
        {certificados.map(cert => (
          <div class="cert-card">
            <strong>{cert.titulo}</strong>
            <span>Folio: {cert.folio}</span>
            <img src={cert.qr} alt="QR Certificado" />
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2>Proyectos destacados</h2>
      <div class="proyectos-list">
        {proyectos.map(proj => (
          <div class="proyecto-card">
            <h3>{proj.nombre}</h3>
            <p>{proj.descripcion}</p>
            <div class="proyecto-tecnologias">
              {proj.tecnologias.map(tec => (
                <span class="tec">{tec}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2>Habilidades Técnicas</h2>
      <div class="skills-list">
        {habilidadesTecnicas.map(skill => (
          <div class="skill-item">
            <div class={`skill-icon ${skill.icon.toLowerCase()}`}>{skill.icon}</div>
            <div class="skill-name">{skill.nombre}</div>
            <div class="skill-rating">
              {Array.from({ length: 5 }, (_, i) => (
                <div class={`rating-dot ${i < skill.rating ? "filled" : ""}`}></div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2>Habilidades Blandas</h2>
      <ul class="soft-skills">
        {habilidadesBlandas.map(h => <li>{h}</li>)}
      </ul>
    </section>
  </section>
</main>

