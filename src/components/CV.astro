<style>
* { margin:0; padding:0; box-sizing:border-box; }
body { font-family:'Inter',sans-serif; background:#f5f1eb; color:#4a4a4a; line-height:1.6; }

/* CONTENEDOR PRINCIPAL */
.resume-container { max-width:1200px; margin:auto; padding:40px 20px; display:grid; grid-template-columns:1fr 2fr; gap:50px; }
.left-column, .right-column { display:flex; flex-direction:column; gap:30px; }

/* PERFIL */
.profile-section{text-align:center;}
.profile-image{width:160px;height:160px;border-radius:50%;object-fit:cover;margin:0 auto 15px;}
.name{font-size:2rem;font-weight:700;color:#6b7280;}
.personal-info{display:flex;flex-direction:column;gap:10px;margin-top:15px;}
.info-item{display:flex;align-items:center;gap:10px;}
.info-label{font-weight:600;color:#6b7280;min-width:80px;}

/* SECCIONES */
.section-title{font-size:1.6rem;font-weight:700;color:#6b7280;margin-bottom:15px;border-bottom:2px solid #d1d5db;padding-bottom:8px;}
.education-item, .contact-item, .cert-item{margin-bottom:15px;}
.education-school{color:#9ca3af;font-size:0.95rem;}

/* CONTACTO */
.contact-item{display:flex;align-items:center;gap:12px;padding:8px;background:rgba(255,255,255,0.3);border-radius:6px;}
.contact-icon{width:28px;height:28px;background:#6b7280;border-radius:6px;display:flex;align-items:center;justify-content:center;color:white;font-size:13px;}

/* CERTIFICADOS */
.cert-section{display:flex;flex-direction:column;gap:12px;}
.cert-item{padding:12px;border:1px solid #d1d5db;border-radius:10px;background:#fff;display:flex;flex-direction:column;align-items:center;}
.cert-item img{width:110px;margin-top:10px;}

/* HABILIDADES */
.skills-list{display:flex;flex-direction:column;gap:14px;}
.skill-item{display:flex;align-items:center;gap:12px;}
.skill-icon{width:32px;height:32px;border-radius:6px;display:flex;align-items:center;justify-content:center;font-weight:bold;font-size:12px;color:white;}
.skill-name{flex:1;font-weight:500;color:#6b7280;}
.skill-rating{display:flex;gap:4px;}
.rating-dot{width:10px;height:10px;border-radius:50%;background:#d1d5db;}
.rating-dot.filled{background:#6b7280;}

/*Colores*/ 
/* COLORES DE HABILIDADES */
.py { background: #3776AB; }
.java { background: #f89820; }
.laravel { background: #ff2d20; }
.mysql { background: #00758f; }
